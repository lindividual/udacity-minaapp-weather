.today {
  position: relative;
  text-align: center;
  /* color: green; */
  /* background-color: moccasin; */
  padding-top: 174rpx;
}

.temp {
  font-size: 200rpx;
  /* margin-top: 20%; */
  opacity: 0.8;
}

.weather {
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.6;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.figure {
  font-size: 100rpx;
}

.forecast-title {
  padding-top: 32rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.time-icon {
  width: 30rpx;
}

.forecast-content {
  white-space: nowrap;
  padding-top: 32rpx;
}

.forecast-item {
  display: inline-block;
  width: 168rpx;
  text-align: center;
  font-size: 32rpx;
  opacity: 0.8;
}

.weather-icon {
  width: 50%;
  padding-top: 8rpx;
}

.today-weather {
  display: flex;
  padding: 32rpx 0rpx 32rpx 0rpx;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 44.8rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  margin: 150rpx 32rpx 0 32rpx;
  opacity: 0.8;
  align-items: center;
}

.arrow {
  width: 16rpx;
}